<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="#EFBD8A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#EBDCC1">

        <!-- 👤 Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/profile"
            app:shapeAppearanceOverlay="@style/CircleImage"
            android:scaleType="centerCrop" />

        <!-- 📝 Header -->
        <TextView
            android:id="@+id/header"
            android:text="Student Details"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 👤 Name -->
        <TextView
            android:id="@+id/detail_name"
            android:text="Name Placeholder"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 📧 Email -->
        <TextView
            android:id="@+id/detail_email"
            android:text="Email Placeholder"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 🎂 Age -->
        <TextView
            android:id="@+id/detail_age"
            android:text="Age Placeholder"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 🟢 Presence -->
        <TextView
            android:id="@+id/detail_isPresent"
            android:text="isPresent Placeholder"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
